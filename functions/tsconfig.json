{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "target": "ESNext",
    "importsNotUsedAsValues": "error",
    "noImplicitAny": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "stripInternal": true,
    "inlineSources": false,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "alwaysStrict": false,
    "allowJs": true,
    "charset": "utf8",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "LF",
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
}
