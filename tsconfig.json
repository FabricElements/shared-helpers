{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "ES6",
      "es2015.promise"
    ],
    "target": "ES6",
    "noImplicitAny": false,
    "outDir": "lib",
    "stripInternal": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "alwaysStrict": false,
    "allowJs": true,
    "charset": "utf8",
    "module": "ES6",
    "moduleResolution": "Node",
    "newLine": "LF",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
